<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:8080/products">Productos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:8080/carts/{{cart}}">Carrito</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:8080/profile">Perfil</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<h4>Bienvenido: {{first_name}}</h4>
<p>Rol: {{role}}</p>
<a href="http://localhost:8080/users/logout"><button class="btn btn-danger">Cerrar sesion</button></a>

{{#if productos.length }}
<div class="justify-content-center row">
    {{#each productos}}
    <div class="card m-2 col-2">
        <div class="card-body">
             <img src="{{thumbnail}}" class="card-img-top mb-3" alt="imagen producto">
             <h5 class="card-title">{{title}}</h5>
             <h4 class="card-title">${{price}}</h4>
             <p class="card-text">{{description}}</p>
             <p class="card-text">
                <small class="text-body-secondary">
                    Codigo: {{code}}
                    Stock: {{stock}}
                </small></p> 
            <div class="row justify-content-center">
                <div class="d-flex justify-content-center align-items-center">
                    <a href='http://localhost:8080/products/{{_id}}' class="text-decoration-none">
                    <button class="btn btn-outline-primary mx-2">Ver Detalles</button></a>
                    <button class="btn btn-outline-success mx-2" data-id={{_id}}>Agregar al carrito</button>
                </div>
            </div>    
        </div>
    </div>
    {{/each}}

    {{#if hasPrevPage}}
    <div class="text-center">
        <a href={{prevLink}}><button class="btn btn-warning mb-4 mx-1">Página anterior</button></a>
    {{/if}}
    {{#if hasNextPage}}
        <a href={{nextLink}}><button class="btn btn-warning mb-4">Página siguiente</button></a>
    </div>
    {{/if}}

{{else}}

<h2>Sin productos.</h2>
{{/if}}
</div>

<script src="/js/index.js"></script>
